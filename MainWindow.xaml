<Window x:Class="GK_Proj_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GK_Proj_2"
        mc:Ignorable="d"
        Title="Bezier Surface Renderer" Height="700" Width="1220" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="White" BorderThickness="3" Margin="5" ClipToBounds="True">
            <Canvas x:Name="MyCanvas" Background="White" Loaded="MyCanvas_Loaded"/>
        </Border>
        <StackPanel Grid.Column="1">
            <Button Content="Load surface control points file" Click="FileButton_Click" Margin="0,5,0,0"/>
            <TextBlock Text="Triangulation accuracy" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="PrecisionSlider" Value="10" Minimum="5" Maximum="50" SmallChange="1" LargeChange="10" TickFrequency="10" ValueChanged="PrecisionSlider_ValueChanged" Margin="5,5,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <RadioButton x:Name="GridRadioButton" Content="Grid" Margin="5,0,0,0" IsChecked="True" GroupName="GroupA" Checked="GridRadioButton_Checked"/>
                <RadioButton x:Name="FillRadioButton" Content="Filled" Margin="20,0,0,0" GroupName="GroupA" Checked="FillRadioButton_Checked"/>
            </StackPanel>
            <TextBlock Text="Alpha angle" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="AlphaSlider" Value="0" Minimum="-45" Maximum="45" SmallChange="1" LargeChange="5" TickFrequency="10" ValueChanged="AlphaSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Betha angle" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="BetaSlider" Value="0" Minimum="-45" Maximum="45" SmallChange="1" LargeChange="2" TickFrequency="5" ValueChanged="BetaSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Zoom" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="ZoomSlider" Value="1" Minimum="1" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" ValueChanged="ZoomSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Light color" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label>R:</Label>
                <TextBox x:Name="RTextBox" Width="30" Text="255"/>
                <Label>G:</Label>
                <TextBox x:Name="GTextBox" Width="30" Text="255"/>
                <Label>B:</Label>
                <TextBox x:Name="BTextBox" Width="30" Text="255"/>
                <Button x:Name="ChangeLightButton" Click="ChangeLightButton_Click" Content="Change" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Surface color" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label>R:</Label>
                <TextBox x:Name="RObjTextBox" Width="30" Text="248"/>
                <Label>G:</Label>
                <TextBox x:Name="GObjTextBox" Width="30" Text="24"/>
                <Label>B:</Label>
                <TextBox x:Name="BObjTextBox" Width="30" Text="148"/>
                <Button x:Name="ChangeObjButton" Click="ChangeObjButton_Click" Content="Change" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Text="kd (diffuse reflection constant)" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="kdSlider" Value="0.5" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.1" ValueChanged="kdSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="ks (specular reflection constant)" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="ksSlider" Value="0.5" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.1" ValueChanged="ksSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="m (shininess constant)" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="mSlider" Value="50" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" ValueChanged="mSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Light animation" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Start" Click="StartSunAnimation" Margin="0,0,15,0" Width="70"/>
                <Button Content="Stop" Click="StopSunAnimation" Margin="15,0,0,0" Width="70"/>
            </StackPanel>
            <TextBlock Text="z position of light" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="zSlider" Value="300" Minimum="-2000" Maximum="2000" SmallChange="10" LargeChange="100" TickFrequency="10" ValueChanged="zSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Texture" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Load" Click="NormalsButton_Click" Margin="0,0,5,0" Width="50"/>
                <CheckBox x:Name="NormalsCheckBox" Content="Use normal map" IsChecked="False" Checked="NormalsCheckBox_Checked" Unchecked="NormalsCheckBox_Unchecked"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Load" Click="TextureButton_Click" Margin="0,0,5,0" Width="50"/>
                <CheckBox x:Name="TextureCheckBox" Content="Use color map" IsChecked="False" Checked="TextureCheckBox_Checked" Unchecked="TextureCheckBox_Unchecked"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
