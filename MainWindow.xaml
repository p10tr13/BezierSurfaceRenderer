<Window x:Class="GK_Proj_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GK_Proj_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1220" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="White" BorderThickness="3" Margin="5" ClipToBounds="True">
            <Canvas x:Name="MyCanvas" Background="White" Loaded="MyCanvas_Loaded"/>
        </Border>
        <StackPanel Grid.Column="1">
            <Button Content="Wczytaj plik" Click="FileButton_Click" Margin="0,10,0,0"/>
            <TextBlock Text="Suwak dokładności triangulacji" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="PrecisionSlider" Value="10" Minimum="5" Maximum="50" SmallChange="1" LargeChange="10" TickFrequency="10" ValueChanged="PrecisionSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Suwak kąta alfa" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="AlphaSlider" Value="0" Minimum="-45" Maximum="45" SmallChange="1" LargeChange="5" TickFrequency="10" ValueChanged="AlphaSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Suwak kąta beta" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="BetaSlider" Value="0" Minimum="0" Maximum="10" SmallChange="1" LargeChange="2" TickFrequency="5" ValueChanged="BetaSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Suwak zoom'a" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="ZoomSlider" Value="1" Minimum="1" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" ValueChanged="ZoomSlider_ValueChanged" Margin="5,5,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label>R:</Label>
                <TextBox x:Name="RTextBox" Width="30" Text="1"/>
                <Label>G:</Label>
                <TextBox x:Name="GTextBox" Width="30" Text="1"/>
                <Label>B:</Label>
                <TextBox x:Name="BTextBox" Width="30" Text="1"/>
                <Button x:Name="ChangeLightButton" Click="ChangeLightButton_Click" Content="Zmień" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock Text="Suwak kd" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="kdSlider" Value="0.5" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.1" ValueChanged="kdSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Suwak ks" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="ksSlider" Value="0.5" Minimum="0" Maximum="1" SmallChange="0.01" LargeChange="0.1" TickFrequency="0.1" ValueChanged="ksSlider_ValueChanged" Margin="5,5,0,0"/>
            <TextBlock Text="Suwak m" Margin="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Slider x:Name="mSlider" Value="50" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" ValueChanged="mSlider_ValueChanged" Margin="5,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
